#!/bin/zsh
HELP='''
通过类名获取类文件的路径
 $ android.class com.foo.MainActivity
 $ android.class  
 $ android.class .ui.DemosActivity 
'''
#--------------------------------------------------[ body ]
local class=${1:=$CLASS}

[[ -z $ANDROID_PROJECT_HOME ]] && {
    +android
}

[[ -z $class ]] && print -u2 $HELP && return
    
# full class name
[[ $class[1] == '.' ]] && class=${ANDROID_PACKAGE_NAME}${class}

<<< $ANDROID_JAVA${${class#.}//.//}.java
